<div class="page-header">
  <h1>
    Tickets
    <a href="/tickets/new" class="btn btn-lg btn-success">New Ticket</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Event</th>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Ticket type</th>
        <th>Contact method</th>
        <th>Actions</th>
      </tr>

      <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.event_id %></td>
        <td><%= ticket.user_id %></td>
        <td><%= ticket.quantity %></td>
        <td><%= ticket.price %></td>
        <td><%= ticket.ticket_type %></td>
        <td><%= ticket.contact_method %></td>
        <td>
          <a href="/tickets/<%= ticket.id %>" class="btn btn-primary">Show</a>
          <a href="/tickets/<%= ticket.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_ticket/<%= ticket.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
