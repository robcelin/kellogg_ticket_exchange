<div class="page-header">
  <h3 class="text-info">
    My Active Ticket Listings
    <a href="/tickets/new" class="btn btn-md btn-info">Sell a New Ticket</a>
  </h3>
</div>


<div class="row">
  <div class="col-md-8">
    <table class="table table-striped table-hover">
      <tr>
        <th>Event</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Ticket type</th>
        <th>Contact Method</th>
        <th>Actions</th>
      </tr>

      <% @tickets.each do |ticket| %>
      <tr>
        <td><a href="/events/<%= ticket.event_id %>"><%= ticket.event.name %></td>
        <td><%= ticket.quantity %></td>
        <td><%= number_to_currency(ticket.price) %></td>
        <td><%= ticket.ticket_type %></td>
        <td><%= ticket.contact_method %></td>
        <td>
          <a href="/tickets/<%= ticket.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_ticket/<%= ticket.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
