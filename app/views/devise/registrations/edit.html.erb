<h2 class="text-info">Edit <%= current_user.name %>'s Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <ul></ul>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <ul></ul>

  <div class="field">
    <%= f.label :phone %><br />
    <%= f.phone_field :phone, autofocus: true %>
  </div>

  <ul></ul>

  <div class="field">
    <%= f.label :slack %><br />
    <%= f.text_field :slack, autofocus: true %>
  </div>

  <ul></ul>

  <div class="field">
      <%= f.label :preferred_contact_method %> <br />
    </div>
      <div class="col-lg-2">
        <select class="form-control" id="user_preferred_contact_method" name="user[preferred_contact_method]" value="<%= current_user.preferred_contact_method %>">
          <option name="user[Email]">Email</option>
          <option name="user[Phone]">Phone</option>
          <option name="user[Slack]">Slack</option>
        </select>
      </div>

  <br />

  <ul></ul>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %> <br />

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br/>
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div><br />

  <div class="actions">
    <%= f.submit "Update your Account" %>
  </div>
<% end %><br />

<h5>Cancel your account</h5>

<p>Unhappy with the Kellogg Ticket Exchange? <%= button_to "Delete your account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
