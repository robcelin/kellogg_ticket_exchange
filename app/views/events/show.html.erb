<div class="page-header">
  <h3>Event #<%= @event.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Start date</dt>
      <dd><%= @event.start_date %></dd>

      <dt>End date</dt>
      <dd><%= @event.end_date %></dd>

      <dt>Start time</dt>
      <dd><%= @event.start_time %></dd>

      <dt>End time</dt>
      <dd><%= @event.end_time %></dd>

      <dt>Ticket face value</dt>
      <dd><%= @event.ticket_face_value %></dd>

      <dt>Address</dt>
      <dd><%= @event.address %></dd>

      <dt>Event description</dt>
      <dd><%= @event.event_description %></dd>

      <dt>Tickets available</dt>
      <dd><%= @event.tickets_available %></dd>

      <dt>Campusgroups url</dt>
      <dd><%= @event.campusgroups_url %></dd>

      <dt>Image url</dt>
      <dd><%= @event.image_url %></dd>

      <dt>Event category</dt>
      <dd><%= @event.event_category %></dd>

      <dt>Name</dt>
      <dd><%= @event.name %></dd>
  </div>
</div>

<div>
  <div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th></th>
        <th>Name of Seller</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Type</th>
        <th>Contact Method</th>
      </tr>
    </div>
  </div>

  <% @event.tickets.each do |ticket| %>
  <li class="list-group-item">
              <a href="/users/<%= ticket.user_id %>">
                <%= ticket.user_id %>
              </a>
            </li>
          <% end %>


</div>

<br />

<div class="btn-group btn-group-justified">
  <a href="/events" class="btn btn-primary">
    Back
  </a>
  <a href="/events/<%= @event.id %>/edit" class="btn btn-warning">
    Edit
  </a>
  <a href="/delete_event/<%= @event.id %>" class="btn btn-danger" rel="nofollow">
    Delete
  </a>

</div>
