<div class="page-header">
  <h1>
    Events
    <a href="/events/new" class="btn btn-lg btn-success">New Event</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Start date</th>
        <th>End date</th>
        <th>Start time</th>
        <th>End time</th>
        <th>Ticket face value</th>
        <th>Address</th>
        <th>Event description</th>
        <th>Campusgroups url</th>
        <th>Image url</th>
        <th>Event category</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @events.each do |event| %>
      <tr>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= event.ticket_face_value %></td>
        <td><%= event.address %></td>
        <td><%= event.event_description %></td>
        <td><%= event.campusgroups_url %></td>
        <td><%= event.image_url %></td>
        <td><%= event.event_category %></td>
        <td><%= event.name %></td>
        <td>
          <a href="/events/<%= event.id %>" class="btn btn-primary">Show</a>
          <a href="/events/<%= event.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_event/<%= event.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
